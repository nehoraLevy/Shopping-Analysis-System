<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF" xmlns:be="clr-namespace:BE;assembly=BE" xmlns:System="clr-namespace:System;assembly=System.Runtime" xmlns:MyUserControls="clr-namespace:PLWPF.MyUserControls" x:Class="PLWPF.MainWindow"
        d:DataContext="{d:DesignInstance Type={x:Type be:Category}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TabControl x:Name="TabControl1" Margin="10,10,10,80">            
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Header" Value="{Binding Name}"/>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
        <MyUserControls:Item  HorizontalAlignment="Left" Margin="6,369,0,0" VerticalAlignment="Top" Height="42" Width="603"/>
        <Image Source="images//milk.png" HorizontalAlignment="Left" Height="32" Margin="119,371,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>




