<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF" xmlns:be="clr-namespace:BE;assembly=BE" xmlns:System="clr-namespace:System;assembly=System.Runtime" xmlns:MyUserControls="clr-namespace:PLWPF.MyUserControls" x:Class="PLWPF.MainWindow"
        d:DataContext="{d:DesignInstance Type={x:Type be:Category}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <ScrollViewer>
            <TabControl Height="450"  Width="782">
                <TabItem Header="Add Shopping Card">
                    <Grid Background="#FFE5E5E5">
                        <MyUserControls:UploadQR />
                    </Grid>
                </TabItem>
                <TabItem Header="See Your Recommended List">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="See Your Statistic">
                    <Grid Background="#FFE5E5E5">
                        <MyUserControls:LineChartUserControl />
                    </Grid>
                </TabItem>
            </TabControl>
        </ScrollViewer>
        
    </Grid>
</Window>




