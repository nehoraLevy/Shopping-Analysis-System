<UserControl x:Class="PLWPF.MyUserControls.PieChartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.MyUserControls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FFCFD6E4"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontFamily" Value="Segoe Print"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <lvc:PieChart Name="Pie" LegendLocation="Right"  Hoverable="False" DataTooltip="{x:Null}">
        </lvc:PieChart>

        <ComboBox x:Name="filterAcoordingToTime" Foreground="#0B0B61" IsEditable="True" IsReadOnly="True" Text="day" FontFamily="Segoe Print" HorizontalAlignment="Left" Margin="252,23,0,0" VerticalAlignment="Top" Width="120"  SelectedItem="{Binding Filter, Mode=TwoWay}" >
            <ComboBoxItem Content="day"/>
            <ComboBoxItem Content="week" />
            <ComboBoxItem Content="month"/>
        </ComboBox>

        <ComboBox x:Name="filter2" Foreground="#0B0B61" IsEditable="True" IsReadOnly="True" Text="Product" FontFamily="Segoe Print" HorizontalAlignment="Left" Margin="406,22,0,0" VerticalAlignment="Top" Width="120"  SelectedItem="{Binding Filter, Mode=TwoWay}" >
            <ComboBoxItem Content="Product" />
            <ComboBoxItem Content="Store" IsSelected="{Binding FilterStore}"/>
            <ComboBoxItem Content="Category"  IsSelected="{Binding Filter}"/>
            <ComboBoxItem Content="TotalCost"/>
        </ComboBox>
    </Grid>
</UserControl>
