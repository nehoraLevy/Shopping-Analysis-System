<UserControl x:Class="PLWPF.MyUserControls.IntegerUpDownUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.MyUserControls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <xctk:IntegerUpDown x:Name="UpDown" Margin="5,6,0,0" FontFamily="Segoe Print" FontStyle="Italic" AllowTextInput="True" ValueChanged="IntegerUpDown_ValueChanged" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
