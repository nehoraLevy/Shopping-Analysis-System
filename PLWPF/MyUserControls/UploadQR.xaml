<UserControl x:Class="PLWPF.MyUserControls.UploadQR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

             xmlns:local="clr-namespace:PLWPF.MyUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="533" Width="632">

    <Grid HorizontalAlignment="Center" Width="624">

        <Button Height="24" HorizontalAlignment="Left"
        Margin="82,440,0,0" Name="btnLoad"   Visibility="Visible"
        Width="82" Click="btnLoad_Click"  VerticalAlignment="Top">Load</Button>
        <Button Height="24" HorizontalAlignment="Left"  Visibility="Visible"
        Margin="263,440,0,0" Name="btnAdd" VerticalAlignment="Top"
        Width="82" Click="btnAdd_Click" >Add</Button>
        <Image Margin="340,115,54,0" x:Name="imgPhoto_Copy"
            Stretch="Fill" RenderTransformOrigin="0.543,0.523" Height="168" VerticalAlignment="Top" />
        <Image Margin="22,38,307,207" x:Name="qrPhoto_Copy" Stretch="Fill" />
        <TextBox Name="ProductPrice" HorizontalAlignment="Left" Margin="438,338,0,0" IsReadOnly = "True" BorderBrush="#00000000" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="18"/>
        <TextBox Name="ProductName" HorizontalAlignment="Left" Margin="438,370,0,0"  IsReadOnly = "True" BorderBrush="#00000000" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="17"/>
        <TextBox HorizontalAlignment="Left" Margin="14,10,0,0" Text="load a QRcode" TextWrapping="Wrap" IsReadOnly = "True" BorderBrush="#00000000" VerticalAlignment="Top" Width="93" Height="25" />
        <local:IntegerUpDownUserControl Visibility="Hidden" x:Name="uc" HorizontalAlignment="Left" Margin="545,344,0,0" VerticalAlignment="Top" />
        <DatePicker Name="date" HorizontalAlignment="Left" Margin="27,350,0,0" VerticalAlignment="Top"/>
        <Button Content="Finish" Visibility="Visible" HorizontalAlignment="Left" Margin="436,438,0,0" VerticalAlignment="Top" Height="24" Width="82" Click="Button_Click_1"/>

        <ComboBox Name="store"  HorizontalAlignment="Left" Margin="29,388,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.526,0.592"/>
    </Grid>
</UserControl>
