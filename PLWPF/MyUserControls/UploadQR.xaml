<UserControl x:Class="PLWPF.MyUserControls.UploadQR"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.MyUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid Margin="0,0,-81,0" HorizontalAlignment="Right" Width="500">


        <Image Margin="12,12,512,351" Name="imgPhoto"
        Stretch="Fill"  />
        <Button Height="24" HorizontalAlignment="Left"
        Margin="76,0,0,23" Name="btnLoad" VerticalAlignment="Bottom"
        Width="97" Click="btnLoad_Click">Load</Button>
        <Button Height="24" HorizontalAlignment="Left"
        Margin="295,0,0,23" Name="btnAdd" VerticalAlignment="Bottom"
        Width="97" Click="btnAdd_Click" >Add</Button>
        <Image Margin="105,311,318,0" x:Name="imgPhoto_Copy"
            Stretch="Fill" RenderTransformOrigin="0.543,0.523" Height="68" VerticalAlignment="Top" />
        <Image Margin="75,50,151,163" x:Name="qrPhoto_Copy"
            Stretch="Fill" />
        <TextBox Name="ProductPrice" HorizontalAlignment="Left" Margin="212,342,0,0" IsReadOnly = "True" BorderBrush="#00000000" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBox Name="ProductName" HorizontalAlignment="Left" Margin="212,311,0,0"  IsReadOnly = "True" BorderBrush="#00000000" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBox HorizontalAlignment="Left" Margin="76,10,0,0" Text="load a QRcode to add to your shopping card" TextWrapping="Wrap" IsReadOnly = "True" BorderBrush="#00000000" VerticalAlignment="Top" Width="294" />
        <local:IntegerUpDownUserControl x:Name="uc" HorizontalAlignment="Left" Margin="287,359,0,0" VerticalAlignment="Top"/>





    </Grid>
</UserControl>
