<UserControl x:Class="PLWPF.MyUserControls.CategoriesItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.MyUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <TabControl Height="450"  Width="782">
                <TabItem Header="Add Shopping Card">
                    <Grid Background="#FFE5E5E5">
                        <local:UploadQR />
                    </Grid>
                </TabItem>
                <TabItem Header="See Your Recommended List">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="See Your Statistic">
                    <Grid Background="#FFE5E5E5">
                    </Grid>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</UserControl>
