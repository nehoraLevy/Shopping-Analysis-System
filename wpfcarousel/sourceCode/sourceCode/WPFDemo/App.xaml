<Application x:Class="WPFDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="WPFDemoWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PresentationFramework.Aero, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, ProcessorArchitecture=MSIL;component/themes/aero.normalcolor.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <LinearGradientBrush x:Key="StandardBackground" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF95CE99" Offset="0.4"/>
                <GradientStop Color="#FFFFFFFF" Offset="1"/>
                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                <GradientStop Color="#FFC4EDC4" Offset="0.355"/>
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="StandardBorderBrush" EndPoint="0.0,0.0" StartPoint="1,1">
                <GradientStop Color="#FF81A378" Offset="0.0"/>
                <GradientStop Color="#00FFFFFF" Offset="0.5"/>
                <GradientStop Color="#FF81A378" Offset="1.0"/>
            </LinearGradientBrush>

        </ResourceDictionary>
    </Application.Resources>
</Application>
